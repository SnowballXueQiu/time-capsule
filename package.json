{
  "name": "decentralized-time-capsule",
  "version": "0.1.0",
  "description": "A decentralized time capsule system built on Sui blockchain",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm setup:sui",
    "setup:sui": "node scripts/setup-sui.js",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "sui": "./bin/sui/sui.exe",
    "verify": "node scripts/verify-setup.js"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "typescript": "^5.2.0",
    "@types/node": "^20.8.0",
    "only-allow": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}
